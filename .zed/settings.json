// Folder-specific settings
//
// For a full list of overridable settings, and general information on folder-specific settings,
// see the documentation: https://zed.dev/docs/configuring-zed#settings-files
{
  // Editor preferences
  "show_line_numbers": false, // matches your "editor.lineNumbers": "off"
  "show_minimap": false, // matches your minimap disabled
  "enable_preview_from_file_finder": false, // matches workbench.editor.enablePreview

  // Panel layout
  "project_panel": {
    "dock": "right" // matches your "workbench.sideBar.location": "right"
  },

  // Git settings
  "git": {
    "git_gutter": "tracked_files",
    "auto_fetch": true // matches your git.autofetch
  },

  // Language-specific formatting
  "languages": {
    "Python": {
      "language_servers": ["ruff", "pyright"],
      "format_on_save": "on",
      "formatter": "ruff", // matches your ruff formatter
      "format_on_type": true,
      "code_actions_on_format": {
        "source.organizeImports.ruff": true
      }
    },
    "TypeScript": {
      "language_servers": ["typescript-language-server"],
      "format_on_save": "on",
      "formatter": "prettier"
    },
    "TSX": {
      "language_servers": ["typescript-language-server"],
      "format_on_save": "on",
      "formatter": "prettier" // matches your prettier for typescriptreact
    },
    "JavaScript": {
      "language_servers": ["typescript-language-server"],
      "format_on_save": "on"
    },
    "JSX": {
      "language_servers": ["typescript-language-server"],
      "format_on_save": "on"
    }
  },

  // Lsp settings
  "lsp": {
    "ruff": {
      "settings": {
        "lineLength": 79 // matches your ruff.lineLength
      }
    }
  },

  // File handling
  "confirm_quit": false, // matches your explorer confirm settings being off
  "restore_on_startup": "none", // matches workbench.startupEditor: "none"

  // Terminal
  "terminal": {
    "copy_on_select": false,
    "font_family": "SF Mono"
  },

  // General editor settings
  "format_on_save": "on",
  "autosave": "on_focus_change",
  "tab_size": 2,
  "hard_tabs": false,

  // UI elements
  "scrollbar": {
    "show": "auto"
  },

  // File tree
  "file_finder": {
    "file_icons": true
  }
}
